<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:id="@+id/start_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blue_circle"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_up_black_24dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/start_point"
            android:layout_toEndOf="@id/start_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_point"
            android:layout_toEndOf="@+id/start_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#848482" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:text="Total:"
            android:textColor="#848482"/>
        <TextView
            android:id="@+id/fare_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_point"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:textColor="@color/white"
            android:textSize="50sp" />
        <TextView
            android:id="@+id/travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fare_text"
            android:layout_marginTop="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:textColor="#848482" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/travel"
            android:layout_below="@+id/fare_text"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"
            android:textColor="#848482"
            android:text="Travel time:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/fare_text"
            android:layout_below="@+id/start_point"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:text="$"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/start_point"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="." />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/start_point"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="." />
        <TextView
            android:id="@+id/third_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/start_point"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="." />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_dot"
            android:layout_marginTop="10dp"
            android:layout_marginStart="22dp"
            android:id="@+id/end_layout">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orange_circle"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/end_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_dot"
            android:layout_toEndOf="@+id/end_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/end_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/end_point"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/third_dot"
            android:textColor="#848482"
            android:layout_marginStart="30dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>